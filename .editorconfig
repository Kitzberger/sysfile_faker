# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true
charset = utf-8
trim_trailing_whitespace = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4

[*.jade]
indent_size = 2

[*.scss]
indent_style = tab

[*.js]
indent_size = 2
indent_style = space

[*.xlf]
indent_style = tab

[*.xml]
indent_style = tab

[Makefile]
indent_style = tab
